{
  "compilerOptions": {
    // Project options
    "lib": ["ESNext", "DOM"],
    "outDir": "lib",
    "removeComments": true,
    "target": "ES6",

    // Module resolution
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {},

    // Source Map
    "sourceMap": true,
    "sourceRoot": "/",

    // Strict Checks
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "strictNullChecks": true,

    // Linter Checks
    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
